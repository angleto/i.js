extends header
block controls
    div.collapse.navbar-collapse
        form.navbar-form.navbar-left
            div.form-group
                input#name.form-control(type="text", value=id, size=64, autocomplete="off", autocorrect="off", autocapitalize="off", spellcheck="false")
            button#save.btn.btn-default(type="button")="Save"

            span#save-status.label
        div.nav.navbar-nav.pull-right
            li.dropdown
                a.dropdown-toggle(href="#", data-toggle="dropdown")
                    span.glyphicon.glyphicon-info-sign
                    b.caret
                    div.dropdown-menu
                        h4="Welcome to i.js"

                        span.dropdown-header="Shortcuts"
                        dl
                            dt
                                a(href="#")="Shift-Enter"
                            dd
                                span="evaluate current cell"
                            dt
                                a(href="#")="Ctrl-S (Meta-S)"
                            dd
                                span="save current document"
                            dt
                                a(href="#")="Ctrl-Space"
                            dd
                                span="auto complete"
                        br

                        span.dropdown-header="Special commands"
                        dl
                            dt
                                a(href="#")="%"
                            dd
                                span="Put % as the first character in the cell to let i.js know that the result of cell evaluation should be rendered as HTML."
                            dt
                                a(href="#")=".break"
                            dd
                                span="While inputting a multi-line expression, sometimes you get lost or just don't care about completing it. .break will start over."
                            dt
                                a(href="#")=".clear"
                            dd
                                span="Resets the context object to an empty object and clears any multi-line expression."
                        br
                        a(href="https://github.com/mksenzov/i.js")="i.js on GitHub"

